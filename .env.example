# AI Marketplace Environment Configuration Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id



# Firebase Admin SDK (for API routes)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk webhook secret for user synchronization
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="AI Marketplace"
NEXT_PUBLIC_SITE_DESCRIPTION="AI-Powered Freelance Marketplace"

# =============================================================================
# GOOGLE ANALYTICS
# =============================================================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for API authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Firebase emulator settings (for development)
FIREBASE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080
FIREBASE_AUTH_EMULATOR_PORT=9099
FIREBASE_STORAGE_EMULATOR_PORT=9199

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Stripe for payments (use test keys for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SendGrid for emails
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# FILE STORAGE
# =============================================================================
# Max file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LogFlare for logging (optional)
LOGFLARE_API_KEY=your_logflare_api_key
LOGFLARE_SOURCE_ID=your_logflare_source_id

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug mode
DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# AI Features
NEXT_PUBLIC_ENABLE_AI_MATCHING=true
NEXT_PUBLIC_ENABLE_AI_RECOMMENDATIONS=true

# Beta Features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_ADVANCED_SEARCH=true

# Payment Features
NEXT_PUBLIC_ENABLE_ESCROW=false
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# External API endpoints
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cache TTL (in seconds)
CACHE_TTL=3600

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_BATCH_SIZE=50

# Push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# HSTS settings
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup storage
BACKUP_BUCKET=your-backup-bucket
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# These will be overridden in specific environment configurations

# Development overrides
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=ai-marketplace-dev
# CLERK_WEBHOOK_SECRET=whsec_dev_secret

# Staging overrides
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=ai-marketplace-staging
# NEXT_PUBLIC_SITE_URL=https://staging.ai-marketplace.com

# Production overrides
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=ai-marketplace-prod
# NEXT_PUBLIC_SITE_URL=https://ai-marketplace.com