{
  "name": "ai-marketplace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "npm run test:unit",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "jest --config jest.config.js --watch",
    "test:unit:coverage": "jest --config jest.config.js --coverage",
    "test:unit:vitest": "vitest",
    "test:integration": "jest --config jest.config.js --testMatch '**/integration/**/*.test.{js,ts,tsx}'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "lighthouse-ci autorun",
    "test:a11y": "playwright test --grep accessibility",
    "test:visual": "playwright test --grep visual",
    "test:security": "npm audit --audit-level=high && snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "analyze": "cross-env ANALYZE=true next build",
    "db:seed": "node scripts/seed-database.js",
    "db:reset": "node scripts/reset-database.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.0",
    "@clerk/themes": "^2.4.9",
    "@hookform/resolvers": "^5.2.1",
    "@lhci/cli": "0.13.0",
    "@next/third-parties": "^15.4.6",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@types/react-datepicker": "^7.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "input-otp": "^1.4.2",
    "ioredis": "^5.7.0",
    "libphonenumber-js": "^1.12.12",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-phone-number-input": "^3.4.12",
    "sonner": "^2.0.7",
    "svix": "^1.73.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^8.4.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.47.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "axe-playwright": "^2.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-watch-typeahead": "^2.2.2",
    "node-mocks-http": "^1.15.1",
    "prettier": "^3.3.3",
    "snyk": "^1.1294.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
